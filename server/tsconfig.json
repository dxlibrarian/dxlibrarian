{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"],
    "rootDir": "src",
    "outDir": "lib",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": false,
    "resolveJsonModule": true,
    "types": [
      "md5",
      "node",
      "jest",
      "debug",
      "passport-azure-ad",
      "cookie",
      "content-disposition",
      "jsonwebtoken",
      "mongodb",
      "query-string",
      "./external"
    ]
  }
}
